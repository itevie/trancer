{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "typeRoots": ["./src/types"],
    "skipLibCheck": true,
    "incremental": false

    // "noUnusedLocals": true,
    // "strict": true,
    // "noImplicitAny": true
    // "strictNullChecks": true
    // "strictFunctionTypes": true,
    // "strictBindCallApply": true,
    // "strictPropertyInitialization": true,
    // "noImplicitThis": true
    // "alwaysStrict": true
  },
  "exclude": ["./data_backups", "./src/website/app"],
  "ts-node": {
    "files": true,
    "ignore": ["./src/retired_commands"]
  }
}
